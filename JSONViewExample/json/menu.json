 {
    "class": "UIView",
    "name": "root",
    "layout": {
        "flex-direction": "column",
        "align-items": "stretch",
        "justify-content": "center",
        "margin-bottom": 24,
        "margin-top": 24,
        "margin-start": 24,
        "margin-end": 24
    },
    "appearance": {
        "title" : "JSONViewController example"
    },
    "items": [
        {
            "class": "UIView",
            "name": "titleSubtitle",
            "appearance": {
            },
            "layout": {
                "flex-direction": "column",
                "align-items": "flex-start",
                "justify-content": "flex-start",
                "flex-shrink": 1
            },
            "items": [
                {
                    "class": "UILabel",
                    "name": "title",
                    "appearance": {
                        "text": "feed.json",
                        "numberOfLines": 0
                    },
                    "layout": {
                        "align-self": "flex-start",
                        "margin-bottom": 4
                    }
                },
                {
                    "class": "UILabel",
                    "name": "subtitle",
                    "appearance": {
                        "text": "Example json feed using flexbox",
                        "numberOfLines": 0
                    },
                    "layout": {
                        "align-self": "flex-start",
                        "margin-bottom": 24
                    }
                },
                {
                    "class": "UIView",
                    "name": "separator",
                    "appearance": {
                        "backgroundColor": {
                            "type": "color",
                            "value": "lightGrayColor"
                        }
                    },
                    "layout": {
                        "align-self": "stretch",
                        "height": 0.5,
                        "margin-bottom": 24
                    }
                }
            ],
            "actions": [
                {
                    "type": "push",
                    "trigger": "tap",
                    "payload": {
                        "type": "file",
                         "filename": "feed.json"
                    }
                }
            ]
        },
        {
            "class": "UIView",
            "name": "titleSubtitle",
            "appearance": {
            },
            "layout": {
                "flex-direction": "column",
                "align-items": "flex-start",
                "justify-content": "flex-start",
                "flex-shrink": 1
            },
            "items": [
                {
                    "class": "UILabel",
                    "name": "title",
                    "appearance": {
                        "text": "Modal presentation",
                        "numberOfLines": 0
                    },
                    "layout": {
                        "align-self": "flex-start",
                        "margin-bottom": 4
                    }
                },
                {
                    "class": "UILabel",
                    "name": "subtitle",
                    "appearance": {
                        "text": "Modally presented view",
                        "numberOfLines": 0
                    },
                    "layout": {
                        "align-self": "flex-start",
                        "margin-bottom": 24
                    }
                },
                {
                    "class": "UIView",
                    "name": "separator",
                    "appearance": {
                        "backgroundColor": {
                            "type": "color",
                            "value": "lightGrayColor"
                        }
                    },
                    "layout": {
                        "align-self": "stretch",
                        "height": 0.5,
                        "margin-bottom": 24
                    }
                }
            ],
            "actions": [
                {
                    "type": "present",
                    "trigger": "tap",
                    "payload": {
                        "type": "file",
                         "filename": "modal.json"
                    }
                }
            ]
        }
    ]
}